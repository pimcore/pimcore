<?xml version="1.0"?>
<project default="cleanup">

 <target name="init">
    <mkdir dir="result" />
  </target>

  <target name="cleanup">
    <delete dir="result" />
  </target>
  
  <target name="testTranslate" depends="init">
    <copy todir="result" overwrite="true">
      <fileset dir="gettext">
	  	<include name="*.php"/>
	  </fileset>
      <filterchain>
        <filterreader classname="phing.filters.TranslateGettext">
          <param type="locale" value="fr_FR"/>
		  <param type="dir" value="gettext/"/>
        </filterreader>
      </filterchain>
    </copy>
  </target>

</project>
